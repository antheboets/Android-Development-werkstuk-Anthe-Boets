<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditTimeInstanceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/edit_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:id="@+id/edit_text_view_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="20sp" />

        <TimePicker
            android:id="@+id/edit_time_picker_start"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/edit_text_view_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:textSize="20sp" />

        <TimePicker
            android:id="@+id/edit_time_picker_end"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/edit_text_view_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_interval"
            android:textSize="20sp" />

        <NumberPicker
            android:id="@+id/edit_number_picker_time_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edit_text_view_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days"
            android:textSize="20sp" />

        <Button
            android:id="@+id/edit_button_days"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:text="@string/none"
            android:textAlignment="textStart" />

    </LinearLayout>

</ScrollView>